@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-2">
        <form method="post" asp-action="Update" asp-controller="Home">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mb-3">
                <label>İşin Tanımı</label>
                <input type="text" asp-for="@Model.Definition" class="form-control" />
            </div>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted">
                <label class="form-check-label" for="IsCompleted">Tamamlandı mı?</label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</body>
</html>